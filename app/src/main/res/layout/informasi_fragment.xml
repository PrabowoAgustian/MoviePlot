<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lime_green">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgDetailMovie"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_movie_height_image_movie"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_dummy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imgDetailMovie"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/detail_movie_content_margin_top"
        android:layout_marginHorizontal="@dimen/detail_movie_content_margin_horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleDetailMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonic the Hedgehog"
            android:textColor="@color/very_dark_gray"
            android:textSize="@dimen/detail_movie_text_size_title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubTitleDetailMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_movie_margin_top_subtitle"
            android:layout_gravity="center"
            android:text="Sonic the Hedgehog"
            android:textColor="@color/very_dark_gray"
            android:textSize="@dimen/detail_movie_text_size_subtitle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIdMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_movie_margin_top_id"
            android:layout_marginBottom="@dimen/detail_movie_margin_bottom_content"
            android:text="@string/detail_movie_title_id"
            android:textSize="@dimen/detail_movie_text_size_subtitle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_movie_margin_bottom_content"
            android:text="@string/detail_movie_title_id"
            android:textSize="@dimen/detail_movie_text_size_subtitle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_movie_title_description"
            android:textSize="@dimen/detail_movie_text_size_subtitle"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>