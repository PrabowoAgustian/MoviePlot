<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_toolbar_home"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cyan_blue">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeIntroduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_text_toobar"
        android:layout_marginHorizontal="@dimen/margin_horizontal_text_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/home_good_evening"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_toolbar"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_text_name_toolbar"
        android:layout_marginHorizontal="@dimen/margin_horizontal_text_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeIntroduce"
        android:text="Jarvis"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>